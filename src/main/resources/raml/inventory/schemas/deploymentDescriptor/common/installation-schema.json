{
  "title": "Deployment Descriptor Installation Schema",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.descriptor.common.Installation",
  "description": "JS7 JOC Descriptor Installation Schema",
  "type": "object",
  "anyOf": [
    {
      "required": [
        "httpPort",
        "home",
        "data"
      ]
    },
    {
      "required": [
        "httpsPort",
        "home",
        "data"
      ]
    }
  ],
  "additionalProperties": false,
  "properties": {
    "home": {
      "type": "string"
    },
    "data": {
      "type": "string"
    },
    "homeOwner": {
      "type": "string"
    },
    "dataOwner": {
      "type": "string"
    },
    "runUser": {
      "type": "string"
    },
    "httpPort": {
      "type": "string"
    },
    "httpsPort": {
      "type": "string"
    },
    "javaHome": {
      "type": "string"
    },
    "javaOptions": {
      "type": "string"
    }
  }
}