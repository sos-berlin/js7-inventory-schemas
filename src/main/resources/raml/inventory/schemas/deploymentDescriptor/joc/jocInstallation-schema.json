{
  "title": "Deployment Descriptor Installation Schema",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.descriptor.joc.JocInstallation",
  "description": "JS7 JOC Descriptor Installation Schema",
  "type": "object",
  "extends" : {
    "$ref": "../common/installation-schema.json"
  },
  "anyOf": [
    {
      "required": [
        "httpPort",
        "home",
        "data",
        "setupDir",
        "securityLevel"
      ]
    },
    {
      "required": [
        "httpsPort",
        "home",
        "data",
        "setupDir",
        "securityLevel"
      ]
    }
  ],
  "additionalProperties": false,
  "properties": {
    "setupDir": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "securityLevel": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "dbmsConfig": {
      "type": "string"
    },
    "dbmsDriver": {
      "type": "string"
    },
    "dbmsInit": {
      "type": "string",
      "enum": [
        "byInstaller",
        "byJoc",
        "off"
      ]
    },
    "isUser": {
      "type": "boolean"
    },
    "isPreserveEnv": {
      "type": "boolean"
    }
  }
}