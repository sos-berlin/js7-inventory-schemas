{
  "title": "lock",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.instruction.Lock",
  "type": "object",
  "anyOf": [
        {
            "required": [
                "lockName",
  				"lockedWorkflow"
            ]
        },
        {
            "required": [
                "demands",
  				"lockedWorkflow"
            ]
        }
  ],
  "extends" : {
    "$ref": "instruction-schema.json"
  },
  
  "description": "instruction with fixed property 'TYPE':'Lock'",
  "properties": {
    "lockName": {
		"desription": "DEPRECATED since 2.5.0",
        "alias": "lockId,lockPath",
		"type": "string",
    	"pattern": "^[^<>]*$",
    	"maxLength": 255,
    	"minLength": 1
    },
    "count": {
        "desription": "DEPRECATED since 2.5.0",
        "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "lockedWorkflow": {
        "$ref": "instructions-schema.json"
    },
    "demands" : {
        "type": "array",
        "minItems": 1,
        "items": {
      		"type": "object",
      		"javaType": "com.sos.inventory.model.instruction.LockDemand",
      		"required": [
      			"lockName"	
      		],
      		"properties": {
      			"lockName": {
      				"alias": "lockId,lockPath",
					"type": "string",
    				"pattern": "^[^<>]*$",
    				"maxLength": 255,
    				"minLength": 1
      			},
      			"count": {
        			"$ref": "../common/nonNegativeInteger-schema.json"
    			}
    		},
    		"additionalProperties": false
        }	
    }
  },
  "additionalProperties": false
}
