{
  "title": "AddOrder",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.instruction.AddOrder",
  "type": "object",
  "required": [
  	"workflowName"
  ],
  "extends" : {
    "$ref": "instruction-schema.json"
  },
  
  "description": "instruction with fixed property 'TYPE':'AddOrder'",
  "propertyOrder": [
  	"TYPE",
    "workflowName"
  ],
  "properties": {
  	"workflowName" : {
  		"alias": "workflowPath",
  		"type": "string",
  		"pattern": "^[^<>]*$",
  		"maxLength": 255,
  		"minLength": 1
  	},
    "arguments": {
    	"$ref": "../common/variables-schema.json"
    },
    "remainWhenTerminated" : {
    	"type" : "boolean",
    	"default": false
	},
    "startPosition": {
     	"anyOf": [
    		{"$ref": "../common/position-schema.json"},
    		{"$ref": "../common/string255Required-schema.json"}
    	]
    },
	"endPositions": {
		"type": "array",
		"items": {
     		"anyOf": [
    			{"$ref": "../common/position-schema.json"},
    			{"$ref": "../common/string255Required-schema.json"}
    		]
     	}
    },
    "blockPosition": {
    	"anyOf": [
    		{"$ref": "../common/blockPosition-schema.json"},
    		{"$ref": "../common/string255Required-schema.json"}
    	]
    },
    "forceJobAdmission": {
        "alias": "forceAdmission",
    	"type": "boolean",
    	"default": false	
    },
    "tags": {
     	"type": "array",
    	"uniqueItems": true,
    	"items": {
    		"$ref": "../common/string255Required-schema.json"	
    	}
    }
  },
  "additionalProperties": false
}
