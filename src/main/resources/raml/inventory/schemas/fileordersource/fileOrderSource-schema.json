{
  "title": "fileOrderSource",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.fileordersource.FileOrderSource",
  "type": "object",
  "javaInterfaces" : [
    "com.sos.joc.model.common.IConfigurationObject",
    "com.sos.joc.model.common.IDeployObject",
   	"com.sos.inventory.model.common.IInventoryObject"
  ],
  "anyOf": [
        {
            "required": [
                "workflowName",
    			"agentName",
    			"directoryExpr"
            ]
        },
        {
            "required": [
                "workflowName",
    			"agentName",
    			"directory"
            ]
        }
  ],
  "propertyOrder": [
    "TYPE",
    "version",
    "workflowName",
    "agentName",
    "directoryExpr",
    "directory",
    "pattern",
    "timeZone",
    "delay",
    "title",
    "documentationName"
  ],
  
  
  "description": "deploy object with fixed property 'TYPE':'FileWatch'",
  "properties": {
    "TYPE": {
		"$ref": "../deploy/deployType-schema.json",
		"default": "FileWatch" 
    },
    "version": {
      "$ref": "../common/version-schema.json"
    },
    "workflowName": {
    	"alias": "workflowPath",
    	"type": "string",
    	"pattern": "^[^<>]*$",
    	"maxLength": 255,
    	"minLength": 1
    },
    "agentName": {
    	"alias": "agentId,agentPath",
    	"type": "string",
    	"pattern": "^[^<>]*$",
    	"maxLength": 255,
    	"minLength": 1
    },
    "directoryExpr": {
    	"$ref": "../common/string255Required-schema.json"
    },
    "directory": {
    	"$ref": "../common/string255Required-schema.json"
    },
    "pattern": {
    	"type": "string"
    },
    "timeZone": {
		"$ref": "../common/string255-schema.json"
	},
    "delay": {
      "type": "integer",
      "format": "utc-millisec",
      "minimum": 1,
      "maximum": 9999
    },
    "title": {
      "$ref": "../common/string255-schema.json"
    },
    "documentationName": {
      "$ref": "../common/string255-schema.json"
    },
    "tags": {
     	"type": "array",
    	"uniqueItems": true,
    	"items": {
    		"$ref": "../common/string255Required-schema.json"	
    	}
    }
  },
  "additionalProperties": false
}