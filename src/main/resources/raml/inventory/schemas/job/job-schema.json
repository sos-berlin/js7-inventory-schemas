{
  "title": "job",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.inventory.model.job.Job",
  "type": "object",
  "javaInterfaces" : [
    "com.sos.joc.model.common.IConfigurationObject"
  ],
  "required": [
    "agentId",
    "executable",
    "taskLimit"
  ],
  "properties": {
    "agentId": {
	  "$ref": "../common/string255-schema.json"
	},
	"executable": {
	  "javaType": "com.sos.inventory.model.job.Executable",
	  "oneOf": [
	    { "$ref": "executableScript-schema.json" },
	    { "$ref": "executableJava-schema.json" }
	  ]
	},
    "returnCodeMeaning": {
      "$ref": "jobReturnCode-schema.json"
    },
    "taskLimit": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "timeout": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "graceTimeout": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "jobClass": {
      "$ref": "../common/path-schema.json"
    },
    "defaultArguments": {
      "$ref": "../common/variables-schema.json"
    },
    "title": {
      "$ref": "../common/string255-schema.json"
    },
    "documentationPath": {
      "$ref": "../common/path-schema.json"
    },
    "logLevel": {
      "$ref": "jobLogLevel-schema.json"
    },
    "criticality": {
      "$ref": "jobCriticality-schema.json"
    }
  },
  "additionalProperties": false
}