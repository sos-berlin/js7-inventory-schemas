{
	"title": "job",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"javaType": "com.sos.inventory.model.job.Job",
	"type": "object",
	"javaInterfaces": [
		"com.sos.joc.model.common.IConfigurationObject"
	],
	"required": [
		"agentName",
		"executable"
	],
	"description": "returnCodeMeaning is deprecated: moved to ShellScriptExecutable",
	"properties": {
		"agentName": {
			"alias": "agentId,agentPath",
			"type": "string",
			"pattern": "^[^<>]*$",
			"maxLength": 255,
			"minLength": 1
		},
		"executable": {
			"javaType": "com.sos.inventory.model.job.Executable",
			"oneOf": [
				{
					"$ref": "executableScript-schema.json"
				},
				{
					"$ref": "executableJava-schema.json"
				}
			]
		},
		"admissionTimeScheme" : {
			"$ref" : "admissionTimeScheme-schema.json" 
		},
		"skipIfNoAdmissionForOrderDay": {
			"type": "boolean",
			"default": false
		},
		"returnCodeMeaning": {
			"$ref": "jobReturnCode-schema.json"
		},
		"parallelism": {
   	  		"alias": "taskLimit",
			"type": "integer",
			"minimum": 1,
			"default": 1
		},
		"timeout": {
			"$ref": "../common/nonNegativeInteger-schema.json"
		},
		"graceTimeout": {
			"alias": "sigkillDelay",
			"description": "in seconds",
			"type": "integer",
  			"minimum": 0,
  			"default": 15
		},
		"failOnErrWritten": {
			"type": "boolean",
			"default": false
		},
		"jobClass": {
			"$ref": "../common/path-schema.json"
		},
		"defaultArguments": {
			"$ref": "env-schema.json"
		},
		"jobResourceNames": {
			"alias": "jobResourcePaths",
			"type": "array",
			"items": {
				"$ref": "../common/string255-schema.json"
			}
		},
		"title": {
			"$ref": "../common/string255-schema.json"
		},
		"documentationName": {
			"$ref": "../common/string255-schema.json"
		},
		"criticality": {
			"$ref": "jobCriticality-schema.json"
		},
		"warnIfShorter": {
			"$ref": "../common/nonNegativeIntegerOrPercentage-schema.json"
		},
		"warnIfLonger": {
			"$ref": "../common/nonNegativeIntegerOrPercentage-schema.json"
		},
		"notification": {
			"$ref": "notification/notification-schema.json"
		}
	},
	"additionalProperties": false
}