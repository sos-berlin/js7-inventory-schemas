{
	"title": "admission time WeekdayPeriod",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"javaType": "com.sos.inventory.model.job.WeekdayPeriod",
	"type": "object",
	"extends" : {
    	"$ref": "admissionTimePeriod-schema.json"
  	},
    "required": [
        "TYPE",
        "duration",
        "secondOfWeek"
    ],
